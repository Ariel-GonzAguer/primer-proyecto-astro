---
import Social from "./Social.astro";
import AlertBTN from "./AlertBTN.astro";
---

<script>
  import { zustandStore } from "../zustand/useStore";

  // suscripciÃ³n al estado de Zustand para cambiar el color del footer
  zustandStore.subscribe((state) => {
    const footer = document.querySelector("footer");
    if (footer) {
      const newColor = state.countInStore < 10 ? "transparent" : "green";
      footer.style.backgroundColor = newColor;
    }
  });
</script>

<style>
  footer {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
  }
</style>

<footer>
  <Social platform="twitter" username="astrodotbuild" />
  <Social platform="github" username="withastro" />
  <Social platform="youtube" username="astrodotbuild" />
  <AlertBTN />
</footer>
