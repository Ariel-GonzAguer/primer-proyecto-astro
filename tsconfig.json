{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist"
  ],
  // relative paths ğŸ˜
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@tags/*": [
        "src/pages/tags/*"
      ],
      "@posts/*": [
        "src/pages/posts/*"
      ]
    }
  }
}